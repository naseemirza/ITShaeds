<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <!--<style name="AppTheme.NoActionBar">-->
    <!--<item name="windowActionBar">false</item>-->
    <!--<item name="windowNoTitle">true</item>-->


    <!--</style>-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Actionbar Theme -->
    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/green</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MyCustomTabLayout1" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText1</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
    </style>

    <style name="MyCustomTabText1" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


      <!--childTab-->

    <style name="MyCustomTabLayoutch" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabTextch</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
    </style>

    <style name="MyCustomTabTextch" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyCustomTabLayoutch1" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabTextch1</item>
        <item name="tabSelectedTextColor">@android:color/black</item>
    </style>

    <style name="MyCustomTabTextch1" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>
