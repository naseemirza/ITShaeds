        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"
            android:background="@color/gray">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_jobs"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

