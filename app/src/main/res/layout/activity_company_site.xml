<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    tools:context="tbs.thinkbiz.solutions.itshades.CorpCustomer.Profile.CompanySiteActivity">

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/nestdscrolview"
        android:fillViewport="true"
        android:background="@color/colorWhite"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.naseem.priceomania1.ScrollingActivity"
        >

        <ScrollView
            android:id="@+id/scrolview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/re"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/r1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff">

                    <android.support.v7.widget.RecyclerView

                        android:id="@+id/my_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="horizontal" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lihrz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/r1"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cmpimg"
                        android:layout_width="130dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        card_view:cardElevation="2dp">

                        <ImageView

                            android:id="@+id/compid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:src="@drawable/itshadslogo" />

                    </android.support.v7.widget.CardView>


                    <LinearLayout
                        android:id="@+id/linvrt"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:orientation="horizontal"
                            android:layout_marginRight="10dp">


                            <TextView
                                android:id="@+id/cmpname1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" Admin"
                                android:paddingLeft="5dp"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <!--<LinearLayout-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_gravity="center"-->
                            <!--android:layout_marginLeft="10dp"-->
                            <!--android:layout_marginRight="10dp"-->
                            <!--android:layout_marginTop="5dp"-->
                            <!--android:orientation="horizontal">-->


                            <!--<TextView-->
                                <!--android:id="@+id/mnumber1"-->
                                <!--android:layout_width="wrap_content"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:paddingLeft="5dp"-->
                                <!--android:text="9899647657"-->
                                <!--android:textColor="@color/colorBlack"-->
                                <!--android:textSize="15sp" />-->

                        <!--</LinearLayout>-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_marginRight="5dp">


                            <TextView
                                android:id="@+id/website1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:text="https://www.itshades.com/test"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_marginRight="10dp">


                            <TextView
                                android:id="@+id/mailid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingStart="5dp"
                                android:text="Virtusa@gmail.com"
                                android:textColor="@color/darkgray"
                                android:textSize="15sp" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/abtcmpny"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lihrz"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="3sp"
                    android:paddingStart="8dp"
                    android:text="@string/aboutitshades"
                    android:textColor="#545454"
                    android:textSize="13sp"
                    tools:ignore="RtlCompat" />





            </RelativeLayout>
        </ScrollView>
    </android.support.v4.widget.NestedScrollView>



</RelativeLayout>
