<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.itshaeds.CompnyDrctry.CmpProfFilterActivity">

    <ScrollView
        android:id="@+id/scrolview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="12dp"
                android:text="Company Profile" />


            <Spinner
                android:id="@+id/spinnerCntry"
                android:layout_width="match_parent"
                android:layout_below="@+id/textView17"
                android:layout_marginTop="12dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <Spinner
                android:id="@+id/spinnerInd"
                android:layout_width="match_parent"
                android:layout_below="@+id/spinnerCntry"
                android:layout_marginTop="12dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <Spinner
                android:id="@+id/spinnerFocsarea"
                android:layout_width="match_parent"
                android:layout_below="@+id/spinnerInd"
                android:layout_marginTop="12dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />
            <Spinner
                android:id="@+id/spinneroffrng"
                android:layout_width="match_parent"
                android:layout_below="@+id/spinnerFocsarea"
                android:layout_marginTop="12dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:background="@drawable/buttoncorner"
                android:layout_below="@+id/spinneroffrng"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Submit" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
