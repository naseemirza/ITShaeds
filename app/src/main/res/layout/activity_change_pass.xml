<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.itshaeds.CorpCustomer.Profile.ChangePassActivity">

    <EditText
        android:id="@+id/editOldpass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:backgroundTint="@color/green"
        android:paddingStart="10dp"
        android:layout_marginTop="70dp"
        android:textSize="10dp"
        android:ems="10"
        android:hint="Old Password :"
        android:inputType="textPersonName"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/editNewPass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:backgroundTint="@color/green"
        android:layout_below="@+id/editOldpass"
        android:ems="10"
        android:textSize="10dp"
        android:hint="New Password :"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/editConfPass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:textCursorDrawable="@drawable/black_cursor"
        android:backgroundTint="@color/green"
        android:layout_below="@+id/editNewPass"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="10dp"
        android:hint="Confirm Password :" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:text="Save"
        android:layout_below="@+id/editConfPass"
        android:layout_marginTop="40dp"
        android:background="@drawable/buttoncorner" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:text="Cancle"
        android:layout_below="@+id/button2"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttoncorner" />




</RelativeLayout>
