<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.itshaeds.ForgotPassActivity">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp"
        android:textColor="@color/green"
        android:textSize="12dp"
        android:text="@string/password_will_be_send_on_your_authorized_email_idFogtPass" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:paddingStart="5dp"
        android:ems="10"
        android:textSize="10dp"
        android:inputType="textPersonName"
       android:hint="@string/emailReg"
        android:paddingLeft="5dp" />

    <Button
        android:id="@+id/button_frgt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/buttoncorner"
        android:text="Recover Password"
        android:textColor="@color/colorWhite"
        android:textSize="10dp" />
</RelativeLayout>
