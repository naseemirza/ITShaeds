<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

 <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:clickable="true"
    android:elevation="1dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true"
    card_view:cardElevation="1dp">

    <RelativeLayout
        android:id="@+id/re1"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/liname"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/compname"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CompanyName"
               android:textColor="@color/green"
                android:textSize="15dp" />


        </LinearLayout>

        <Button
            android:id="@+id/prmbutton"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/my_button_bg"
            android:text="Premium"
            android:textColor="@color/red"
            android:textSize="10dp" />


        <LinearLayout
            android:id="@+id/linimg"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/liname"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/cmpimg"
                android:layout_width="85dp"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                card_view:cardElevation="2dp">

                <ImageView

                    android:id="@+id/compid"
                    android:layout_width="wrap_content"
                   android:scaleType="centerInside"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:src="@drawable/compnylogo" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/companydetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/msg"
                android:textSize="12dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/compsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/linimg"
            android:layout_marginBottom="10dp"
            android:clickable="false"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Company Site>>"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/compsite"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:weightSum="3">


            <Button
                android:id="@+id/websitebutton"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:clickable="false"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:text="Website"
                android:textAllCaps="false"
                android:textColor="@color/red"
                android:textSize="12dp" />

            <Button
                android:id="@+id/callbutton"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:clickable="false"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/websitebutton"
                android:layout_weight="1"
                android:background="@color/green"
                android:text="Call"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="15dp" />


            <Button
                android:id="@+id/emailbutton"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:clickable="false"
                android:layout_weight="1"
                android:background="@drawable/my_button_bg"
                android:text="Email"
                android:textAllCaps="false"
                android:textColor="@color/red"
                android:textSize="12dp" />

        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>