<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.itshaeds.TermsActivity">


    <ScrollView
        android:id="@+id/scrolview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textitshds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="151dp"
                android:textSize="17dp"
                android:textAllCaps="false"
                android:textColor="#545454"
                android:layout_marginTop="5dp"
                android:text="About IT Shades"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="151dp" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="15dp"
                android:textColor="#545454"
                android:textSize="12sp"
                android:lineSpacingExtra="3sp"
                tools:ignore="RtlCompat"
                android:layout_alignStart="@+id/textitshds"
                android:layout_below="@+id/textitshds"
                android:layout_marginTop="10dp"
                android:text="@string/itdesc" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
