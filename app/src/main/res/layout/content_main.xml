<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.itshaeds.LoginActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/itshadslogo"
        android:layout_marginLeft="10dp" />


    <EditText
        android:id="@+id/editTextU"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="10dp"
        android:textSize="10dp"
        android:ems="10"
        android:paddingStart="10dp"
        android:hint="@string/user_id_login"
        android:inputType="textPersonName"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/editTextP"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/editTextU"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:textSize="10dp"
        android:hint="@string/passwordtext_login"
        android:paddingStart="10dp"
        android:inputType="textPassword"
        android:paddingLeft="10dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="45dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextP"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/buttonL"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/spinner"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttoncorner"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonL"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="12dp"
        android:text="@string/signuptext_login" />

    <TextView
        android:id="@+id/textViewRgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:text="@string/registered_textlogin" />

    <TextView
        android:id="@+id/textViewfrgt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRgs"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:text="@string/forgot_passwordtextlogin"
        android:textColor="#FF0000"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_alignEnd="@+id/textViewRgs"
        android:layout_alignRight="@+id/textViewRgs"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginTop="40dp"
        android:textColor="@color/green"
        android:text="@string/get_startedLogintitle" />




</RelativeLayout>
